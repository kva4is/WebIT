  <script>
   var socialMediaModal = document.getElementById("socialMediaModal");
        var reviewsModal = document.getElementById("reviewsModal");
        var socialMediaLink = document.getElementById("socialMediaLink");
        var reviewsLink = document.getElementById("reviewsLink");
        var closeSocialMediaModal = document.getElementById("closeSocialMediaModal");
        var closeReviewsModal = document.getElementById("closeReviewsModal");

        socialMediaLink.onclick = function() {
            socialMediaModal.style.display = "block";
        }

        reviewsLink.onclick = function() {
            reviewsModal.style.display = "block";
        }

        closeSocialMediaModal.onclick = function() {
            socialMediaModal.style.display = "none";
        }

        closeReviewsModal.onclick = function() {
            reviewsModal.style.display = "none";
        }

        window.onclick = function(event) {
            if (event.target == socialMediaModal) {
                socialMediaModal.style.display = "none";
            }
            if (event.target == reviewsModal) {
                reviewsModal.style.display = "none";
            }
        }
  </script>
